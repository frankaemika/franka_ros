<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hand">
  <xacro:macro name="hand" params="connected_to:='' ns:='' rpy:='0 0 0' xyz:='0 0 0' ">
    <xacro:unless value="${connected_to == ''}">
    <xacro:include filename="$(find realsense2_camera)/urdf/_d435.urdf.xacro"/>

      <joint name="${ns}_hand_joint" type="fixed">
        <parent link="${connected_to}"/>
        <child link="${ns}_hand"/>
        <origin xyz="${xyz}" rpy="${rpy}"/>
      </joint>
    </xacro:unless>
    <link name="${ns}_hand">
      <visual>
        <geometry>
          <mesh filename="package://franka_description/meshes/visual/hand.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://franka_description/meshes/collision/hand.stl"/>
        </geometry>
      </collision>
    </link>

<!--CAMERAMOUNT  LINKS!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
    <link name="${ns}_mount">
    <visual>
        <geometry>
        <mesh filename="package://eab_models/models/panda_mount/panda_realsense_D4xx.stl"
        scale="0.001 0.001 0.001"/>
        </geometry>
    </visual>
    <collision>
        <geometry>
        <mesh filename="package://eab_models/models/panda_mount/panda_realsense_D4xx.stl"
        scale="0.001 0.001 0.001"/>
        </geometry>
    </collision>
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.68" />
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
    </inertial>
    </link>
   <!--CAMERAMOUNT LINKS END!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->

    <link name="${ns}_leftfinger">
      <visual>
        <geometry>
          <mesh filename="package://franka_description/meshes/visual/finger.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://franka_description/meshes/collision/finger.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${ns}_rightfinger">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh filename="package://franka_description/meshes/visual/finger.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh filename="package://franka_description/meshes/collision/finger.stl"/>
        </geometry>
      </collision>
    </link>

    <!--CAMERAMOUNT JOINTS!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->

    <joint name="${ns}_mount_j" type="fixed">
        <parent link="${ns}_hand"/>
        <child link="${ns}_mount"/>
        <origin xyz="0.0177 0.0 0.008" rpy="0 0 -1.57096327"/>
        <axis xyz="0 1 0"/>
        <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
    </joint>

	<link name="camera_link1" />
  	<sensor_d435 parent="picking_camera_link">
   		<origin xyz="0.0485 0 0.0" rpy="0 0 0"/>
  	</sensor_d435>
	<joint name="robot_to_camera" type="fixed">
	    <parent link="${ns}_mount"/>
	    <child link="picking_camera_link"/>
	    <origin xyz="0 0 0.0" rpy="-1.57096327 -1.57096327 0"/>
	</joint>
<!--CAMERAMOUNT JOINT END!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
    <joint name="${ns}_finger_joint1" type="prismatic">
      <parent link="${ns}_hand"/>
      <child link="${ns}_leftfinger"/>
      <origin xyz="0 0 0.0584" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
    </joint>
    <joint name="${ns}_finger_joint2" type="prismatic">
      <parent link="${ns}_hand"/>
      <child link="${ns}_rightfinger"/>
      <origin xyz="0 0 0.0584" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
      <mimic joint="${ns}_finger_joint1" />
    </joint>
  </xacro:macro>
</robot>
